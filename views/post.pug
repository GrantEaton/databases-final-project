extends layout.pug

block content
  
  ol.breadcrumb
    li
      a(href='/') Home
    li(style='padding-left: 5px')
      a(href='/topic/' + topic.topic_id) #{topic.name}
    li(style='padding-left: 5px').active #{post.title}
    
  h3 #{post.title}
  h5 By 
    a(href='/user/'+post.user_id) #{post.user.username} 
    | on #{post.date.format('MMMM D, YYYY')} at #{post.date.format('h:mm A')}    
  != post.text
  hr
      
  form(method='post')
    .form-group
      textarea.form-control(name='text',rows=5, placeholder='Send a reply...')
    button.btn.btn-primary Submit Reply
    span.pull-right 0 / 1000 
    
  .panel.panel-default
    .panel-heading Replies    
    .list-group
      each reply in post.replies
        .list-group-item
          span 
            a(href='/users/'+reply.user_id) #{reply.user.username} 
            span  &middot; #{reply.date.fromNow()}
          .reply-text
            != reply.text
