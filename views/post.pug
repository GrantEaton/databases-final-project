extends layout.pug

block content
  
  ol.breadcrumb
    li
      a(href='/') Home
    li
      a(href='/topic/' + topic.topic_id) #{topic.topic_name}
    li.active #{post.post_title}
    
  .container
    
    .panel.panel-default
      .panel-body
        h1 #{post.post_title}        
        p #{post.post_text}
        
    h3 Reply
    form
      .form-group
        textarea.form-control(rows=10)
      button.btn.btn-primary Submit Reply
          
