extends layout.pug

block content
  
  .row
    
    .col-xs-7
      .panel.panel-default
        .panel-heading
          span Sign up for an account
        .panel-body
          form#signup.center-block
            .form-group
              label Username
              input.form-control(name='username')
            .form-group
              label Email Address
              input.form-control(name='email')
            .form-group
              label Confirm Email Address
              input.form-control
            .form-group
              label Password
              input.form-control(type='password',name='password')
            .form-group
              label Confirm Password
              input.form-control(type='password')
            button.btn.btn-primary.pull-right Signup
          
    .col-xs-5
      .panel.panel-default
        .panel-heading
          span Log in
        .panel-body
          form#login.center-block
            .form-group
              label Username
              input.form-control(name='username')
            .form-group
              label Password
              input.form-control(type='password',name='password')
            button.btn.btn-primary.pull-right Login
